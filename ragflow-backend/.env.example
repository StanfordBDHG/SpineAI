# RAGFlow Backend Configuration for SpineAI
# Copy this file to .env and fill in your actual values

# OpenAI API Key (required for RAG functionality)
OPENAI_API_KEY=your_openai_api_key_here

# Proxy Secret Key (change in production)
PROXY_SECRET_KEY=spineai_secret_key_change_in_production

# RAGFlow Configuration
RAGFLOW_HOST=0.0.0.0
RAGFLOW_PORT=80

# Database Configuration
MYSQL_PASSWORD=ragflow_password
MYSQL_DATABASE=ragflow
MYSQL_USER=ragflow

# MinIO Configuration
MINIO_ROOT_USER=ragflow
MINIO_ROOT_PASSWORD=ragflow_password

# Device Configuration (cpu or gpu)
DEVICE=cpu
